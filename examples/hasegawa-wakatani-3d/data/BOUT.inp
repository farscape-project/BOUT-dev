#
# Hasegawa-Wakatani test case
#

timestep = 0.001   # Output timestep
nout = 200        # Number of output steps

periodicX = true


[mesh]
Lx = 51.2
Ly = 8.0
Lz = 51.2

nx = 132  # Note 4 guard cells in X
ny = 16
nz = 128  # Periodic, so no guard cells in Z

dx = Lx/(nx-4)
dy = Ly/ny
dz = Lz/nz


# Set periodic boundary condition in y
ixseps1 = nx
ixseps2 = nx 

[laplace]
#type=hypre3d

#flags = 0   # Flags for Laplacian inversion

#rtol = 1.e-9
#atol = 1.e-14

[solver]

[hw]

alpha = 1.0    # Adiabaticity (~ conductivity)
kappa = 1.0    # Density gradient drive
Dvort = 1e-6   # Vorticity diffusion
Dn    = 1e-6   # Density diffusion

[all]
scale = 0.

bndry_all = dirichlet_o2

[vort]

scale = 0.1  # Fluctuation amplitude
function = mixmode(2*pi*x) * mixmode(z - y)  # Fluctuation function


